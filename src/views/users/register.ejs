<body>
    <%- include('../partials/header') %>

    <section class="body-login">

        <div class="contenedor-formulario contenedor">
            <div class="imagen-formulario">

            </div>

            <form class="formulario" method="POST" action="/users/Register" enctype="multipart/form-data">
                <div class="texto-formulario">
                    <h2>Hola! Registrate aqui.</h2>
                </div>
                <div class="input">
                    <label for="name">Nombre</label>
                    <input placeholder="Ingresa tu nombre" type="text" name="name" id="name" value="<%= locals.old?.name || '' %>">
                    <% if (locals && locals.errors && errors.name) { %>
                            <p class="msg_error"><%= errors.name.msg %></p>
                    <% } %>
                </div>
                <div class="input">
                    <label for="last_name">Apellido</label>
                    <input placeholder="Ingresa tu Apellido" type="text" name="last_name" id="last_name" value="<%= locals.old?.last_name || '' %>">
                    <% if (locals && locals.errors && errors.last_name) { %>
                        <p class="msg_error"><%= errors.last_name.msg %></p>
                    <% } %>
                </div>
                <div class="input">
                    <label for="email">Correo Electronico</label>
                    <input placeholder="Ingresa tu Correo" type="email" name="email" id="email" value="<%= locals.old?.email || '' %>">
                    <% if (locals && locals.errors && errors.email) { %>
                        <p class="msg_error"><%= errors.email.msg %></p>
                    <% } %>
                </div>
                <div class="input">
                    <label for="password">Contraseña</label>
                    <input placeholder="Ingresa tu Contraseña" minlength="8" type="password" name="password" id="password" value="<%= locals.old?.password || '' %>">
                    <% if (locals && locals.errors && errors.password) { %>
                        <p class="msg_error"><%= errors.password.msg %></p>
                    <% } %>
                </div>
                <div class="input">
                    <label for="check_password">Confirme su contraseña</label>
                    <input placeholder="Ingresa tu Contraseña" type="password" name="check_password" id="check_password">
                    <% if (locals && locals.errors && errors.check_password) { %>
                        <p class="msg_error"><%= errors.check_password.msg %></p>
                    <% } %>
                </div>
                <div class="input">
                    <label for="input-image">
                        <div>Suba una imagen de perfil</div>
                        <img class="img-register" src="/img/users/userDefault.png" alt="upload-image">
                    </label>
                    <input id="input-image" type="file" name="image" accept=".jpeg, .jpg, .gif, .png, .JPEG, .JPG, .GIF, .PNG">
                    <% if (locals && locals.errors && errors.image) { %>
                        <p class="msg_error"><%= errors.image.msg %></p>
                    <% } %>
                </div>
                <div class="input">
                    <input type="submit" value="Registrate">
                </div>
            </form>
        </div>
    </section>

    <%- include('../partials/footer') %>
    <script src="/js/validateRegister.js"></script>
</body>

</html>